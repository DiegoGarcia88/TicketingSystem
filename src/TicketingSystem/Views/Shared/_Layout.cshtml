<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ticketing System</title>
    <link href=@Url.Content("~/Content/site.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/Content/bootstrap.min.css") rel="stylesheet" type="text/css" />
    <script src=@Url.Content("~/Scripts/modernizr-2.6.2.js")></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="navbar-brand">Ticketing System - @ViewBag.Title</div>
            </div>
                @if (ViewBag.Title == "DashBoard")
                {
                    <div class="navbar-collapse collapse">
                        <a href="@Url.Action("Create", "Ticketing")" 
                           class="btn btn-primary navbar-btn navbar-right">
                            <span class="glyphicon glyphicon-plus"></span> Create Ticket</a>
                    </div>
                }
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container">
        <div class="navbar-fixed-bottom">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Ticketing System</p>
            </footer>
        </div>
    </div>
        
    

    <script src=@Url.Content("~/Scripts/jquery-1.10.2.min.js")></script>
    <script src=@Url.Content("~/Scripts/bootstrap.min.js")></script>
</body>
</html>