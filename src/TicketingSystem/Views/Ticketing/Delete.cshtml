@model TicketingSystem.Models.Ticket

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Title, null, new { @disable = true, @readonly = true, @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Body, 14, 20, new { @disable = true, @readonly = true, @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status, new { @class = "control-label" })
        @Html.EnumDropDownListFor(m => m.Status, new { @disable = true, @readonly = true,@class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Created, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Created, "{0:d}", new { @disable = true, @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Author, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Author.Name, new { @disable = true, @readonly = true, @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Assignee, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Assignee.Name, new { @disable = true, @readonly = true, @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-trash"> Delete</span></button>
    <a href="@Url.Action("DashBoard")" class="btn btn-danger">
        <span class="glyphicon glyphicon-remove"> Cancel</span>
    </a>
}