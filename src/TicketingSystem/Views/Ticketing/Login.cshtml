@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="https://d2wlcd8my7k9h4.cloudfront.net/static/co/img/brand-guidelines/download/sophilabs-wordmark.svg" alt="sophilabs" class="img-responsive" />            
        </div>
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.Label("Email",new { @class = "control-label"})
                    @Html.TextBox("Email",null, new { @class = "form-control"})
                    <!--<label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email">-->
                </div>
                <div class="form-group">
                    @Html.Label("Password", new { @class = "control-label"})
                    @Html.Password("Password",null, new { @class = "form-control" })
                    <!--<label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password">-->
                </div>
                <button type="submit" class="btn btn-default">Login</button>
                @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-default" })
            }
        </div>        
    </div>
</div>