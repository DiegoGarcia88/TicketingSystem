@model List<TicketingSystem.Models.Ticket>

@{
    ViewBag.Title = "DashBoard";
}


<table class="table">
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Status</th>
        <th>Author</th>
        <th>Assignee</th>
        <th>Created</th>
    </tr>
    @foreach (var ticket in Model)
    {
        <tr>
            <td>@ticket.Title</td>
            <td><div style="overflow:auto">@ticket.Body</div></td>
            <td>@ticket.Status</td>
            <td>@ticket.Author.Name</td>
            <td>@ticket.Assignee.Name</td>
            <td>
                <div class="pull-right">
                    <a href="@Url.Action("Edit", new { id = ticket.Id })" class="btn btn-warning btn-sm margin-right">
                        <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> Edit</span>
                    </a>
                    <a href="@Url.Action("Delete", new { id = ticket.Id })" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> Delete</span>
                    </a>
                </div>
            </td>
            <td><span class="hidden-xs">@ticket.Created.ToString("MM/dd/yyyy")</span></td>
        </tr>
    }
</table>